<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Icon link -->
    <!-- Icon link -->
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

    <!--Style sheet css-->
    <link rel="stylesheet" href="/css/frontend/Style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>



    <title>Car Details</title>
</head>

<body>
    <!-- Header section -->
    <%- include('header') %>

    <!-- Main section start here -->
    <main>
        <section class="car_head">
            <div class="car_image mt-2 ml-2">
                <img src="/Upload/<%= package1.image %>" height="200px">
            </div>
            <div class="car_text">
                <table>
                    <tr>
                        <th><i class='fas fa-users'><span><%= package1.range_of_people %> Seats</span></i></th>
                       
                    </tr>
                    <tr>
                        <th><i class='fas fa-map-marker-alt'><span>From <%= package1.from %> </span></i></th>
                        <th><i class='fas fa-user-secret'><span>Car Type: <%= package1.car_type %> </span></i></th>
                    </tr>
                </table>
            </div>
        </section>

        <!-- Car price details -->
        <hr>
        <section class="price">
            
            <div>
                Car Name: <h1>  <%= package1.car_name %></h1>
               
            </div>
            <div>
                <p>Price  <%= package1.price %></p>
            </div>
        </section>
        <hr>

        <!-- car discription section -->
        <section class="car_main">
            <section class="Car_discription">
                <div class="Car_dis">
                    <h1>Why Choise Us!!</h1>
                    <h1><%= package1.car_name %></h1>
                    <p><%= package1.description %>
                    </p>
                    <p>From: <%= package1.start_date %> </p>
                    <p>From: <%= package1.end_date %> </p>
                </div>
                <div class="C_price_table">
                    <table id="C_price_table" class="Hotel_table">
                        <tr>
                            <th colspan="3">PRICE DETAILS</th>
                          </tr>
                        <tr>
                          <td>Price per day</td>
                         
                          <td>Discount</td>
                        </tr>
                        <tr>
                          <td><%= package1.price %></td>
                          <% if (!package1.discount) { %>
                            <td>No discount</td><% } %>
                          <% if (package1.discount) { %>
                            <td><%= package1.discount %></td><% } %>
                          
                        </tr>
                      </table>
                </div>
            </section>
            



            <!-- Rules to rent out -->
            <section class="car_box">
                <section class="Car_rules h-50" >
                    <h2>Rules For Car Rental</h2>
                    <% if (package1.rules === 'on') { %>
                    <ol>
                        <li>Lorem ipsum dolor sit amet.</li>
                        <li>We are not responsible for your luggage protection</li>  <% } %>
                        <li><%= package1.newRule %> </li>
                        <!-- <li><%= package1.newRule %></li> -->
                        <% if (!package1.rules === 'on') { %>
                            <li>No Specified Rules</li>
                            <% } %>
                    </ol>
                </section>

                <!-- Services of car rental -->
                <section class="Car_services h-50">
                    <h2>Services we provide</h2>
                   
                   
                    <% for (let i = 0; i < package1.service_type.length; i++) { %>
                        <ol>
                            
                            <li> <%= package1.service_type[i] %></li>
                            
                        </ol>
                        <% } %>
                  
                </section>
            </section>
        </section>
        <section id="Book_car">
            <button><a href="/C_R_Form/<%= package1._id %>">BOOK NOW</a> </button>
        </section>
    </main>
</body>

</html>