<body>
    <%- include('header') %>


    <!--------Main section Start Here------>

    <main class="packages">
        <!-- HEADER SECTION STARTS HERE -->
        <div class="back-image "></div>
        <div class="bg-text">
            <div class="Search_bar">
                <form class="search">
                    <p>WE WILL FIND A RIGHT CAR FOR YOU!!</p>
                    <input type="text" placeholder="From Location">
                    <input type="text" placeholder="Max Budject">
                    <select name="car_type" id="car_type">
                        <option value="volvo">Car</option>
                        <option value="saab">Vans</option>
                        <option value="opel">jeeps</option>
                        <option value="audi">Busses</option>
                        <option value="audi">Highes</option>
                    </select>
                    <button type="submit">Search</button>
                </form>
            </div>
        </div>

        <!-- <section class="head">
            <div class="bg-image">
                <img src="Images/Kyoto-Japan_FB.jpg">
