        </section>
        <!-- HEADER SECTION ENDS HERE -->


        <!-- CARDS SECTION START HERE -->
        <section class="card_container">
            <div class="row">
                <% if(getData) { %>
                    <% getData.forEach((data)=> { %>
                        <div class=" col-sm-3">
                            <div class="card">
                                <img class="img-card" src='/Upload/<%= data?.image %>' />
                                <div class="card-content">
                                    <h4 class="card-title">
                                        <%= data?.car_name %>
                                    </h4>
                                    <p>
                                        <%= data?.price %> RS
                                    </p>
                                  
                                    <% if (data?.discount) { %>
                                        <p> <b> discount  <%= data?.discount %> </b></p><% } %>
                                    
                                </div>
                                <div class="card-read-more">
                                    <a href="/CR_View/<%= data?._id %>" class="btn btn-link btn-block">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
            </div>
        </section>


    </main>

    <!-- Main section end here -->





