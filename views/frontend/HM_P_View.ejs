<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Icon link -->
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

    <!-- CSS Links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!--Style sheet css-->
    <link rel="stylesheet" href="/css/frontend/Style.css">

    <title>Toure Packages</title>
</head>

<body>
    <!-- Header section -->
    <%- include('header') %>
    <!-- Header section -->
    <section class="Packages_main">
        <div class="Packages_Head">
            <img src='/Upload/<%= package1.image %>'  alt="architecture">
            <div class="Packages_Head">
                <div class="P_Title">
                    <div class="Pacakegs_Title">
                        <h1>  <%= package1.title %></h1>
                       <p><%= package1.number_days %> Days and  <%= package1.number_nights %> Nights</p>
                </div>
                <div class="P_Price">
                   Rs <%= package1.price %>
                </div>
            </div>
        </div>

        <br>

         <!-- Navbar for pacakegs -->
        <!-- <div class="pacakegs_nav">
            <ul>
                <li><a href="default.asp">Home</a></li>
                <li><a href="news.asp">News</a></li>
                <li><a href="contact.asp">Contact</a></li>
                <li><a href="about.asp">About</a></li>
            </ul>
        </div> -->

        <section class="pacakage_main">
            <section class="discription">
                <div class="dis">
                    <h1>Why Choise Us!!</h1>
                    <p>
                        <%= package1.description %>
                    </p>
                </div>
            </section>
            <section class="Tour plan">
                <h2>TOURE PLANE</h2>
                <ol>
                    <li>Title: <%= package1.title %></li>
                    <li>Category: <%= package1.category %></li>
                    <li>Car Type: <%= package1.car_type%></li>
                    <li>Maximum number of memebers: <%= package1.no_of_members %></li>
                    <li>No of Days: <%= package1.number_days %></li>
                    <li>Price: <%= package1.price %></li>
                    <li>Date: <%= package1.start_date %></li>
                    <li>Discount: <%= package1.discount %></li>
                </ol>
            </section>
            <section class="Tour Include h-50">
                <h2>TOURE INCLUDE</h2>
                <% for (let i = 0; i < package1.tour_include.length; i++) { %>
                    <ul>
                        
                        <li> <%= package1.tour_include[i] %></li>
                        
                    </ul>
                    <% } %>
             
               
                  
            </section>

            <section class="Tour Exclude h-50">
                <h2>TOURE EXCLUDE</h2>
                <% for (let i = 0; i < package1.tour_exclude.length; i++) { %>
                    <ul>
                        
                        <li> <%= package1.tour_exclude[i] %></li>
                        
                    </ul>
                    <% } %>
            </section>
        </section>
        <section class="Tour Include">
            <h2>Rules of the trip package</h2>
            <% if (package1.rules === 'on') { %>
            <ol>
               
                        <li>Lorem ipsum dolor sit amet.</li>
                        <li>We are not responsible for your luggage protection</li>  <% } %>
                        <li><%= package1.newRule %></li>
                 
                    
                 
            </ol>
        </section>
        <section class="Tour plan">
            <h2>ACOMODATION</h2>
            <% for (let i = 0; i < package1.accomadation.length; i++) { %>
                <ul>
                    
                    <li> <%= package1.accomadation[i] %></li>
                    
                </ul>
                <% } %>
        </section>

        <section id="Book_car">
            <button><a href="/HM_B_F/<%= package1._id %>">BOOK NOW</a> </button>
        </section>
    </section>
   
</body>

</html>