<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Icon link -->
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

    <!-- CSS Links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!--Style sheet css-->
    <link rel="stylesheet" href="/css/frontend/Style.css">

    <!-- Title of page -->
    <title>Farm House</title>

</head>

<body>
    <!-- Header section -->
    <%- include('header') %>
    <!-- main section start here -->
    <div class="mainClass">
       
        <div class="Packages_Head">
            <img src='/Upload/<%= package1.image %>'  alt="architecture">
            <div class="Packages_Head">
                <div class="P_Title">
                    <div class="Pacakegs_Title">
                        <h1>  Farm House Name:  <%= package1.farm_name %></h1>
                       <p> Location  <%= package1.farm_location %></p>
                </div>
                <div class="P_Price">
                    Price <%= package1.price %>
                </div>
            </div>
        </div>
        <hr class="low_nav">

        <!-- Hotel discription section -->
        <section class="car_main">
            <section class="Car_discription">
                <div class="Car_dis" id="Hotel_dis">
                    <h1>Why Choise Us!!</h1>
                    <p>  <%= package1.description %>
                    </p>
                </div>

                <div class="feature">
                    <h2>Features</h2>
                    <table>
                        <tr>
                            <td><i class='fas fa-users'><span> Number of Bed Rooms <%= package1.number_of_bed_rooms %></span></i></td>
                            <td><i class="fa fa-suitcase"> Number of Other Rooms <%= package1.number_of_other_rooms %></span></i></td>
                            
                        </tr>
                        <tr>
                            <td><i class="fa fa-suitcase">Number of Kitchen  <%= package1.number_of_kitchens %></span></i></td>
                            <td><i class="fa fa-suitcase">Area:  <%= package1.area %></span></i></td>
                            <% if (package1.width === true) { %>
                                <td><i class="fa fa-suitcase"> Width <%= package1.width %></span></i></td>
                                <% } %>
                        </tr>
                       
                        
                    </table>
                </div>
            </section>

            <!-- Rules to rent out -->
            <section class="car_box">
                <section class="Car_rules h-50">
                    <h2>Rules For Car Rental</h2>
                    <ol>
                        <% if (package1.rules === 'on') { %>
                            <li>Lorem ipsum dolor sit amet.</li>
                            <li>We are not responsible for your luggage protection</li>  <% } %>
                        <li><%= package1.newRule %> </li>
                    </ol>
                </section>
                
                <!-- Services of car rental -->
                <section class="Car_services h-50">
                    <h2>Services we provide</h2>
                    <% for (let i = 0; i < package1.service_type.length; i++) { %>
                        <ol>
                            
                            <li> <%= package1.service_type[i] %></li>
                            
                            <% } %>
                            <li><%= package1.newService %> </li>
                        </ol>
                </section>
                <section class="Car_services h-50">
                    <h2>Essentials</h2>
                    <% for (let i = 0; i < package1.essentials_type.length; i++) { %>
                        <ol>
                            
                            <li> <%= package1.essentials_type[i] %></li>
                            <% } %>
                            
                            <li><%= package1.new_essentials %> </li>
                        </ol>
                </section>
            </section>
        </section>

        <section id="Book_car">
            <button><a href="/FarmHouse_B_F/<%= package1._id %>">BOOK NOW</a> </button>
        </section>
</body>
</body>

</html>